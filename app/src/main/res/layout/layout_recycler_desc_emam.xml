<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#013D59"
            android:orientation="vertical"
            android:id="@+id/mainContainerDesc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#013D59"
            android:layoutDirection="rtl"
            android:paddingRight="5dp"
            android:id="@+id/linearFirstSectionDesc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_circle"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:textColor="@color/fontColorTextViewBehavior"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/fontSizeHadis"
                android:id="@+id/textViewNameEmam"/>
        </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#B3B3B3"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:transitionName="imageTitle"
                android:src="@null"
                android:id="@+id/imageCircleDesc"
                android:layout_alignParentLeft="true"
                android:layout_alignLeft="@id/textViewDateِDeath" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontColorTextViewBehavior"
                android:text="تاریخ تولد"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/textViewDateBorn"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="@drawable/corner_textview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eee"
                android:paddingRight="3dp"
                android:text="1395/25/25"
                android:id="@+id/textViewDateِBornEdition"
                android:layout_toLeftOf="@id/textViewDateBorn"
                android:layout_alignBaseline="@id/textViewDateBorn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontColorTextViewBehavior"
                android:text="تاریخ شهادت"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/textViewDateِDeath"
                android:padding="5dp"
                android:backgroundTint="#ED1C24"
                android:textStyle="bold"
                android:background="@drawable/corner_textview"
                android:layout_below="@id/textViewDateBorn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eee"
                android:paddingRight="3dp"
                android:text="25/25/1395"
                android:layout_toLeftOf="@id/textViewDateِDeath"
                android:id="@+id/textViewDateِDeathEdition"
                android:layout_alignBaseline="@id/textViewDateِDeath"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3B3B3"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/imageCircleDesc"
                android:layout_below="@id/textViewDateِDeath"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام پدر:"
                android:textSize="@dimen/fontSizeStyleLife"
                android:textStyle="bold"
                android:layout_below="@id/textViewDateِDeath"
                android:textColor="#7E9BA5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:id="@+id/textViewFatherNameDesc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فلانی ابن فلانی"
                android:textSize="@dimen/fontSizeStyleLife"
                android:layout_toLeftOf="@id/textViewFatherNameDesc"
                android:layout_alignBaseline="@id/textViewFatherNameDesc"
                android:textColor="#eee"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:id="@+id/textViewFatherNameDescEdition"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام مادر:"
                android:textSize="@dimen/fontSizeStyleLife"
                android:textStyle="bold"
                android:layout_below="@id/textViewFatherNameDesc"
                android:textColor="#7E9BA5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:id="@+id/textViewMohterNameDesc"/>

            <TextView
                android:id="@+id/textViewMotherNameDescEdition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textViewMohterNameDesc"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/textViewMohterNameDesc"
                android:text="فلانی بنت فلانی"
                android:textStyle="bold"
                android:textColor="#eee"
                android:textSize="@dimen/fontSizeStyleLife" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="القاب :"
                android:textSize="@dimen/fontSizeStyleLife"
                android:textStyle="bold"
                android:layout_below="@id/textViewMohterNameDesc"
                android:textColor="#FBB03B"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:id="@+id/textViewAdjectiveDesc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="امیر المومنین"
                android:textSize="@dimen/fontSizeStyleLife"
                android:layout_toLeftOf="@id/textViewAdjectiveDesc"
                android:layout_alignBaseline="@id/textViewAdjectiveDesc"
                android:textColor="#eee"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:id="@+id/textViewAdjectiveDescEdition"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_unfavorite"
                    android:id="@+id/imageFavoriteDesc"
                    android:tint="#999999"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_share"
                    android:id="@+id/imageShareDesc"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:tint="#999999"
                    android:layout_toRightOf="@id/imageFavoriteDesc"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زندگی نامه"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnReadLive"
                    android:background="@drawable/corner_button"
                    android:textColor="#eee" />
        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>