<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/backRecyclerBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_favorite"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageFavoriteList"
            android:layout_marginLeft="10dp"
            android:tint="#c61b10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textNameItemFavorite"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:textColor="#eee"
            android:textSize="@dimen/fontSizeTitle"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/viewSeprator"
        android:background="@color/sepratorFavorite"/>
</LinearLayout>