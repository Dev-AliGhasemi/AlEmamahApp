<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seens.alemamah"
    android:installLocation="auto">

    <permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="vira.alemamah.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="vira.alemamah.MainPage"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="vira.alemamah.POPImage.POPImage"
            android:theme="@style/AppTheme.POPUP"/>
        <activity android:name="vira.alemamah.BehaviorActivity"
            android:parentActivityName="vira.alemamah.MainPage"/>
        <activity android:name="vira.alemamah.DescriptionBehavior" />
        <activity android:name="vira.alemamah.StyleLife"
            android:parentActivityName="vira.alemamah.MainPage"/>
        <activity android:name="vira.alemamah.DescriptionStyleLife" />
        <activity android:name="vira.alemamah.SokhanQuran"
            android:parentActivityName="vira.alemamah.MainPage"/>
        <activity android:name="vira.alemamah.POPSokhan.POPSokhan"
            android:theme="@style/AppTheme.POPUP"/>
        <activity android:name="vira.alemamah.Desc"
            android:parentActivityName="vira.alemamah.MainPage"/>
        <activity android:name="vira.alemamah.FavoriteList"
            android:parentActivityName="vira.alemamah.MainPage"/>
    </application>

</manifest>